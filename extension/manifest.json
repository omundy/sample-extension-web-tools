{
    "manifest_version": 3,
    "name": "üëç Web Tools - sample browser extension",
    "short_name": "üëç Web Tools",
    "description": "Add features to your web browser for accessing github.io links, responsive design, etc.",
    "version": "0.1",
    "author": "Owen Mundy",
    "icons": {
        "16": "assets/img/icon-16x16.png",
        "32": "assets/img/icon-32x32.png",
        "48": "assets/img/icon-48x48.png",
        "128": "assets/img/icon-128x128.png"
    },
    "action": {
        "default_icon": {
            "16": "assets/img/icon-16x16.png",
            "32": "assets/img/icon-32x32.png",
            "48": "assets/img/icon-48x48.png",
            "128": "assets/img/icon-128x128.png"
        },
        "default_title": "Web tools",
        "default_popup": "pages/popup.html"
    },
    "background": {
        "service_worker": "assets/js/background.js"
    },
    "options_page": "pages/options.html",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "assets/libs/mousetrap.min.js",
                "assets/js/content.js"
            ],
            "css": [
                "assets/css/styles.css"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "activeTab",
        "storage"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "*.svg",
                "*.png",
                "*.jpg",
                "*.JPG",
                "*.gif",
                "*.GIF",
                "/assets/*"
            ],
            "matches": [
                "https://*.github.com/*",
                "https://*.github.io/*"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}